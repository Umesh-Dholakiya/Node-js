            .blog-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

            .blog-card:hover .image img {
                transform: scale(1.1);
            }

            .blog-posts {
                display: flex;
                flex-wrap: wrap;
                justify-content: center;
            }

            .add-to-cart {
                display: block;
                width: 50%;
                padding: 10px;
                background-color: #28a745;
                color: white;
                border: none;
                cursor: pointer;
                text-align: center;
                margin-top: 10px;
                border-radius: 5px;
                font-size: 16px;
            }

            .add-to-cart:hover {
                background-color: #218838;
            }
        </style>