<%- include('Header') %>

<section id="blog">
    <% if (blogs.length===0) { %>
        <h2 align="center" style="margin-top: 3%;">No Product Added on Dashboard</h2>
    <% } else { %>
        <h2 align="center" style="margin-top: 3%;">View Product</h2>
        <div class="container">
            <% blogs.map((blog)=> { %>
                <div class="blog-posts h-100">
                    <div class="blog-card h-100">
                        <div class="image">
                            <img src="<%= blog?.image %>" alt="Blog image">
                        </div>
                        <div class="content">
                            <h3 class="title">
                                Name : <%= blog?.title %>
                            </h3>
                            <p class="price">
                                Price : <%= blog?.price %>
                            </p>
                            <p class="qty">
                                Quantity : <%= blog?.qty %>
                            </p>
                            <p class="description">
                                Description : <%= blog?.description.slice(0, 90) %>...
                            </p>

                            <div style="display: flex; justify-content: space-between;">
                                <a href="/readmore?readmoreId=<%= blog?.id %>" class="read-more">Read More</a>
                                <button class="add-to-cart" onclick="addToCart('<%= blog.id %>')">Add to Cart</button>
                            </div>

                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>
</section>

<script>
    function addToCart(productId) {
        fetch('/cart/add', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ productId, quantity: 1 })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('Product added to cart!');
                window.location.href = "/viewcart";  // Redirect to cart page after adding
            } else {
                alert('Failed to add product.');
            }
        })
        .catch(error => console.error('Error:', error));
    }
</script>

<%- include('Footer') %>


        <style>
            /* Blog Card Container */
            .container {
                display: flex;
                flex-wrap: wrap;
                max-width: 1340px;
                justify-content: center;
            }

            .blog-card {
                width: 400px;
                height: 500px;
                border: 1px solid #ddd;
                border-radius: 10px;
                overflow: hidden;
                display: flex;
                flex-direction: column;
