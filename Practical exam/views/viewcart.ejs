<%- include('Header') %>

<h2 align="center" style="margin-top: 3%;">Shopping Cart</h2>

<div class="container">
    <% if (cart.items.length === 0) { %>
        <h3 align="center">Your cart is empty!</h3>
    <% } else { %>
        <% cart.items.forEach((item) => { %>
            <div class="cart-item">
                <img src="<%= item.productId.image %>" alt="Product Image">
                <h4><%= item.productId.title %></h4>
                <p>Price: â‚¹<%= item.productId.price %></p>
                <input type="number" value="<%= item.quantity %>" onchange="updateQuantity('<%= item.productId._id %>', this.value)">
                <button onclick="removeFromCart('<%= item.productId._id %>')">Remove</button>
            </div>
        <% }) %>
    <% } %>
</div>

<script>
    function updateQuantity(productId, quantity) {
        fetch('/updatecart', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ productId, quantity })
        }).then(() => location.reload());
    }

    function removeFromCart(productId) {
        fetch('/removecart', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ productId })
        }).then(() => location.reload());
    }
</script>

<%- include('Footer') %>
