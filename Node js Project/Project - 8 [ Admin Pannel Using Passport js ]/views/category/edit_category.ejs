<%- include('../header') %>

    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-header pb-0">
                        <h6>Edit Category</h6>
                    </div>
                    <div class="card-body">
                        <form action="/category/updatecategory" method="post">
                            <input type="hidden" name="editid" value="<%= single?.id %>">
                            <label for="Author" class="form-label">Employee Name</label>
                            <input type="text" name="author" class="form-control" placeholder="Enter Employee Name" value="<%= single?.author %>">

                            <label for="Email" class="form-label">Email</label>
                            <input type="email" name="email" class="form-control" placeholder="Enter Email" value="<%= single?.email %>">

                            <label for="Function" class="form-label">Function</label>
                            <input type="text" name="function" class="form-control" placeholder="Enter Function " value="<%= single?.function %>">

                            <label for="Employed" class="form-label">Employed Date</label>
                            <input type="date" name="employed" class="form-control"  id="datepicker" placeholder="Enter Employed Date" value="<%= single?.employed %>">

                            <label for="Salary" class="form-label">Salary</label>
                            <input type="number" name="salary" class="form-control" placeholder="Enter Salary" value="<%= single?.salary %>" >

                            <label for="Category" class="form-label">Category</label>
                            <input type="text" name="category" class="form-control" placeholder="Enter Category" value="<%= single?.category %>">

                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../footer') %>


        <style>
            body {
                font-family: Arial, sans-serif;
                background-color: #f8f9fa;
                margin: 0;
                padding: 0;
            }

            .container-fluid {
                padding: 20px;
            }

            .card {
                border-radius: 12px;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                background: white;
            }

            .card-header {
                border-bottom: 1px solid #dee2e6;
                background-color: #f8f9fa;
                padding: 15px;
            }

            .card-header h6 {
                margin: 0;
                font-size: 18px;
                font-weight: bold;
            }

            .card-body {
                padding: 20px;
            }

            .form-control {
                width: 100%;
                padding: 10px;
                margin: 10px 0;
                border: 1px solid #ced4da;
                border-radius: 8px;
            }

            .btn-primary {
                background-color: #007bff;
                border: none;
                padding: 10px 20px;
                border-radius: 8px;
                color: white;
                cursor: pointer;
            }

            .btn-primary:hover {
                background-color: #0056b3;
            }

            .table {
                width: 100%;
                margin: 10px 0;
                border-collapse: collapse;
            }

            .table th,
            .table td {
                border: 1px solid #dee2e6;
                padding: 8px;
                text-align: left;
            }

            .table th {
                background-color: #f8f9fa;
                font-weight: bold;
            }

            .status-online {
                color: #28a745;
                font-weight: bold;
            }

            .status-offline {
                color: #6c757d;
                font-weight: bold;
            }
        </style>